{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://agentic-ai.dev/schemas/knowledge-graph.json",
    "title": "Knowledge Graph",
    "description": "JSON Schema for validating knowledge graph structure",
    "type": "object",
    "required": [
        "graphType",
        "role",
        "generatedAt",
        "nodes"
    ],
    "properties": {
        "graphType": {
            "type": "string",
            "const": "knowledge"
        },
        "role": {
            "type": "string",
            "pattern": "^role-"
        },
        "generatedAt": {
            "type": "string",
            "format": "date"
        },
        "nodes": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/knowledgeNode"
            }
        }
    },
    "definitions": {
        "knowledgeNode": {
            "type": "object",
            "required": [
                "id"
            ],
            "properties": {
                "id": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "root",
                        "component",
                        "folder",
                        "document",
                        "concept",
                        "template",
                        "category"
                    ]
                },
                "title": {
                    "type": "string"
                },
                "path": {
                    "type": "string"
                },
                "parent": {
                    "type": "string"
                },
                "links": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            },
            "additionalProperties": true
        }
    }
}